<article class="message is-dark reply-box">
    <div class="message-header reply-header">
        <div class="reply-left">
            <p><%= avatar_helper(reply.user) %></p>
            &nbsp &nbsp &nbsp &nbsp
            <p class="reply-header-user-email"><%= reply.user.email %> </p>
        </div>
        <div>
            <p> <%= time_ago_in_words(reply.created_at)%> </p>
        </div>
        
  </div>
  <div class="message-body">
    <%= reply.reply%>
  </div>
</article>