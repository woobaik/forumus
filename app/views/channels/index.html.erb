
<div class="columns is-multiline">
  <% @channels.each do |channel|  %>
   <div class="card column is-3">
      <header class="card-header">
        <p class="card-header-title">
          <%= channel.title%>
        </p>
      </header>
      <div class="card-content">
        <div class="content">
          <ul>
            <% channel.discussions.each do |discussion| %>
              <li> <%= discussion.title %> </li>
            <% end %>
          <ul>
          <br>
        </div>
      </div>
      <footer class="card-footer">
        <a href="#" class="card-footer-item">Save</a>
        <a href="#" class="card-footer-item">Edit</a>
        <a href="#" class="card-footer-item">Delete</a>
      </footer>
  </div>  
 
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @channels.each do |channel| %>
      <tr>
        <td><%= channel.title %></td>
        <td><%= link_to 'Show', channel %></td>
        <td><%= link_to 'Edit', edit_channel_path(channel) %></td>
        <td><%= link_to 'Destroy', channel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
        
  </tbody>
</table>

<br>

<%= link_to 'New Channel', new_channel_path %>
